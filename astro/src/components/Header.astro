---
const { title } = Astro.props;
// Ensure links work for project sites (GitHub Pages) where Astro.config base is set
const base = import.meta.env.BASE_URL ?? ''
const currentPath = Astro.url.pathname.replace(base, '') || '/'
---
<header class="site-title">
  <div class="logo">ðŸ“š</div>
  <div>
    <h1>{title}</h1>
    <p class="lead">Save articles. Read offline. Your data, your control.</p>
    <nav class="nav">
      <a href={`${base}/`} class:list={{ active: currentPath === '/' }}>Home</a>
      <a href={`${base}/about`} class:list={{ active: currentPath === '/about' }}>About</a>
      <a href={`${base}/install`} class:list={{ active: currentPath === '/install' }}>Install</a>
      <a href="https://github.com/cmwen/stash-it-app" target="_blank" rel="noopener">Repository</a>
    </nav>
  </div>
</header>
