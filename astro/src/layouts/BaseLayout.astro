---
import Header from '../components/Header.astro'
// Import the global stylesheet so Astro/Vite will bundle/optimize it.
import '../styles.css';
import Footer from '../components/Footer.astro'
const { title } = Astro.props
// Use import.meta.env.BASE_URL which is set from astro.config.base at build time
const base = import.meta.env.BASE_URL ?? ''
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} â€” Stash It` : 'Stash It'}</title>
    <meta name="description" content="A local-first, offline-capable save it later app. Like Pocket, but privacy-focused and yours forever." />
            <!-- Styles are bundled by Astro via ESM import in the layout (no public copy needed) -->
  </head>
  <body>
    <main class="container">
      <Header title={title ?? 'Stash It'} />
      <slot />
      <Footer />
    </main>
  </body>
</html>
