---
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
const { title } = Astro.props
const base = Astro.base ?? ''
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} â€” Stash It` : 'Stash It'}</title>
    <meta name="description" content="A local-first, offline-capable save it later app. Like Pocket, but privacy-focused and yours forever." />
        <!-- Use Astro.base so builds with a non-root `base` (e.g. GitHub Pages project sites)
          resolve correctly. Astro.base will be an empty string for root sites. -->
        <link rel="stylesheet" href={`${base}/src/styles.css`} />
  </head>
  <body>
    <main class="container">
      <Header title={title ?? 'Stash It'} />
      <slot />
      <Footer />
    </main>
  </body>
</html>
